    "@remix-run/node": "^2.7.2",
    "@remix-run/react": "^2.7.2",
    "compression": "^1.7.4",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "isbot": "^4.1.0",
    "morgan": "^1.10.0",
    "payload": "^2.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sst": "^2.40.3",
    "tiny-invariant": "^1.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.7.2",
